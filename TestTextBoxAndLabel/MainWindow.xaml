<Window x:Class="TestTextBoxAndLabel.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:TestTextBoxAndLabel"
        mc:Ignorable="d"
        Title="Window1" Height="200" Width="250"
        x:Name="window1" MouseDown="window1_MouseDown"
        >
    <Grid  ShowGridLines="False" 
          Background="#01FFFFFF"
          x:Name="grid1" 
          Focusable="True">
        
        <Label Focusable="True"   x:Name="label" Content="test" HorizontalAlignment="Left" Margin="10,10,0,0" VerticalAlignment="Top" Width="200" Height="25" VerticalContentAlignment="Center" MouseLeftButtonDown="Label_MouseLeftButtonDown"/>
        <TextBox x:Name="textBox1" HorizontalAlignment="Left" Height="25" Margin="10,10,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="200" VerticalContentAlignment="Center" Visibility="Hidden" MouseDown="textBox1_MouseDown" />
        

    </Grid>
    
</Window>
